@model GratitudeApp.Kirjaus

@{
    ViewBag.Title = "Journal";
}


<div class="hero">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="main-form">
            @Html.TextAreaFor(model => model.teksti, new { htmlAttributes = new { @class = "form-control textarea", @cols = "90", @rows = "25", @id = "journal" } })
        </div>
        <input type="submit" value="Create" class="btn btn-default" />

    }
    
<div class="linkki">
    <a href="@Url.Action("About", "Home")" type="button" class="btn btn-default">Inspiration</a>
    <a class="btn btn-default" href="@Url.Action("Index", "Talots")" type="button">To the City</a>
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  
}
